.search .camera {
  width: 52rpx;
  height: 40rpx;
}

.search .category {
  width: 60rpx;
  height: 54rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
