/* components/input/input.wxss */

/* 输入评论 */

.input-box {
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #e5edea;
  border-bottom: 1rpx solid #dcddde;
  box-shadow: 0rpx 1rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
}

.input-box .flex {
  width: 100%;
  height: 100%;
  align-items: center;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 0 190rpx 0 30rpx;
}

.input-box .send-btn {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 150rpx;
  height: 60rpx;
  align-items: center;
  color: #fff;
  border-radius: 50rpx;
  justify-content: center;
  font-size: 28rpx;
  background-image: linear-gradient(97deg, #47d998 0%, #01d5d8 100%);
  box-shadow: 0rpx 10rpx 17rpx 0rpx rgba(0, 154, 87, 0.15);
}
.flex{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.gray{
    background: #e4e4e4 !important;
    color: #ccc !important;
    box-shadow: none !important;
}
